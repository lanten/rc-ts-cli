{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": false,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "*"
      ],
    },
    "lib": [
      "esnext",
      "scripthost",
      "es5"
    ]
  },
  "include": [
    "src",
    "src/**/*.json",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "templates"
  ]
}